# MovieDrop Backend Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development

# TMDB API Configuration
TMDB_API_KEY=your_tmdb_api_key_here

# JustWatch API Configuration (if using)
JUSTWATCH_API_KEY=your_justwatch_api_key_here

# MovieDrop Configuration
MOVIEDROP_BASE_URL=https://moviedrop.app

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://moviedrop.app

# Firebase Configuration (for production database)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# Affiliate Configuration
AMAZON_AFFILIATE_ID=your_amazon_affiliate_id
APPLE_AFFILIATE_ID=your_apple_affiliate_id

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90

# Security
JWT_SECRET=your_jwt_secret_here
API_RATE_LIMIT=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
