# MovieDrop Environment Variables
# Copy to .env.local for local development

# Canonical web domain (used for all public links)
NEXT_PUBLIC_CANONICAL_WEB_BASE="https://moviedrop.app"

# Framer fallback for web users without app
NEXT_PUBLIC_FRAMER_FALLBACK_BASE="https://moviedrop.framer.website"

# API base URL (usually same as canonical web base + /api)
NEXT_PUBLIC_API_BASE="https://moviedrop.app/api"

# TMDB API Key (required for movie data)
TMDB_API_KEY="your_tmdb_api_key_here"
REGION_DEFAULT="US"

# OMDb API Key (for Rotten Tomatoes data)
OMDB_API_KEY="your_omdb_api_key_here"

# Database (for user data, watchlists, etc.)
DATABASE_URL="postgresql://user:password@host:port/database"

# CORS settings
CORS_ORIGIN="https://moviedrop.app"
CORS_ALLOW_ORIGIN="https://moviedrop.app"

# JWT secret for authentication
JWT_SECRET="your_jwt_secret_here"

# Environment
NODE_ENV="production"
